{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "jsx": "react",
    "target": "es2018",
    "lib": ["es2018", "DOM"],
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": false,
    "types": ["jest", "node"],
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@images/*": ["images/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "src/declaration.d.ts"]
}
